@model SportsStore.WebUI.Models.SelectedCategoryModel

@{ 
    bool horizontal = (bool)(ViewContext.RouteData.Values["paramHorizontalLayout"] ?? false);
    string wrapperClasses = horizontal ? "btn btn-group btn-group-sm btn-group-justified" : null;
}

<div class="@wrapperClasses">
    @Html.ActionLink("Home", "List", "Product",null, new { @class =horizontal ? "btn btn-default btn-sm": "btn btn-block btn-default btn-lg" })

    @foreach (var link in Model.categories)
    {
        @Html.RouteLink(link, new {
       controller = "Product",
       action = "List",
       category = link,
       page = 1
   }, new {
       @class = horizontal ?"btn btn-default btn-sm": "btn btn-block btn-default btn-lg"
    + (link == Model.selectedCategory ? " btn-primary":"")
   })}
</div>
