@model SportsStore.WebUI.Models.SelectedCategoryModel

<div data-role="navbar">
    <ul>
        @foreach (var link in Model.categories)
        {
        <li>
            @Html.RouteLink(link, new {
            controller = "Product",
            action = "List",
            category = link,
            page = 1
            }, new {
                data_transition="fade",
            @class = (link == Model.selectedCategory ? " ui-btn-active":null)
            })
        </li>
        }
    </ul>
</div>

