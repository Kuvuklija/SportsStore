@model SportsStore.WebUI.Models.SelectedCategoryModel

<div class="btn-group btn-group-sm btn-group-justified"> <!--тут горизонтальное положение группы элементов-->
    @Html.ActionLink("Home","List", "Product", new { @class="btn btn-default btn-sm"})

    @foreach(var link in Model.categories) {
        @Html.RouteLink(link, new {
       controller = "Product",
       action = "List",
       category = link,
       page = 1
   }, new {
       @class = "btn btn-default btn-sm"
    + (link == Model.selectedCategory ? " btn-primary":"")
   })}
</div>